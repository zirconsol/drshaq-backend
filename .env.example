APP_NAME=DrShaq Dashboard API
ENVIRONMENT=local
API_PREFIX=/api/v1
DEBUG=false

DATABASE_URL=sqlite:///./dashboard.db

JWT_SECRET_KEY=change-this-super-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Solo dominio(s) del dashboard admin
CORS_ALLOWED_ORIGINS=https://dashboard.tudominio.com

EVENT_RATE_LIMIT_WINDOW_SECONDS=60
EVENT_RATE_LIMIT_REQUESTS=120

ADMIN_SEED_USERNAME=
ADMIN_SEED_PASSWORD=
EDITOR_SEED_USERNAME=
EDITOR_SEED_PASSWORD=

# external | supabase | s3
ASSET_PROVIDER=external
ASSET_PUBLIC_BASE_URL=

# Supabase (si ASSET_PROVIDER=supabase)
# Requerido tambien para /api/v1/admin/products/{id}/image/*
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_STORAGE_BUCKET=
# Opcional: bucket especifico para noticias (si se omite, usa SUPABASE_STORAGE_BUCKET)
SUPABASE_NEWS_STORAGE_BUCKET=

# S3 (si ASSET_PROVIDER=s3)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
